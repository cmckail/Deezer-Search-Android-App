<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/turqoise"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".SearchFormFragment" >
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ArtistNameLabel"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:labelFor="@id/ArtistNameEditView"
        android:text="Artist Name"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/ArtistNameEditView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Artist Name (Optional)"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#77FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TrackNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:labelFor="@id/ArtistNameEditView"
        android:text="Track Name"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/TrackNameEditView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Track Name (Optional)"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#77FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/SortLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sort By"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/spinner"
        style="@android:style/Widget.Holo.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/sort_array"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:paddingTop="10dp"
        android:weightSum="1">

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="50dp"
            android:layout_height="61dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/dark_blue"
            android:text="Reset" />

        <Button
            android:id="@+id/SearchBtn"
            android:layout_width="50dp"
            android:layout_height="61dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/dark_blue"
            android:text="Search" />

    </LinearLayout>
</LinearLayout>

</LinearLayout>